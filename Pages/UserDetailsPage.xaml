<Page x:Class="coursework3.Pages.UserDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:coursework3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка с логином и кнопками -->
        <DockPanel Grid.Row="0" Margin="0 0 0 20">
            <TextBlock x:Name="TextBoxLogin"
                DockPanel.Dock="Left"
                Foreground="White"
                FontSize="24"
                FontWeight="Bold"
                VerticalAlignment="Center"/>
            <Button Click="onLogoff" 
                 Height="30" 
                 Margin="25,20,0,15" 
                 HorizontalAlignment="Left" 
                 Content="Выйти на всех устройствах" 
                 FontWeight="Bold" Width="220" FontSize="14">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="DarkRed"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="DarkRed"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>

                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                             Background="{TemplateBinding Background}"
                             BorderBrush="{TemplateBinding BorderBrush}"
                             BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <!-- При наведении -->
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#B22222"/>
                                        </Trigger>

                                        <!-- При нажатии -->
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#8B0000"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <Button Click="BackButton_Click" 
                 Height="30" 
                 Margin="25,20,0,15" 
                 HorizontalAlignment="Left" 
                 Content="Назад" 
                 FontWeight="Bold" FontSize="14" Width="50">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="DarkRed"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="DarkRed"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>

                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                         Background="{TemplateBinding Background}"
                                         BorderBrush="{TemplateBinding BorderBrush}"
                                         BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <!-- При наведении -->
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#B22222"/>
                                        </Trigger>

                                        <!-- При нажатии -->
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#8B0000"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </DockPanel>

        <!-- Информация о пользователе -->
        <Border Grid.Row="1" BorderBrush="#EEEEEE" BorderThickness="0 1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Заголовок списка файлов -->
                <TextBlock x:Name="TextBoxFileCount"
                    Foreground="White"
                           Text="111"
                    Grid.Row="0"
                    FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" Height="20" Margin="0,5,0,0"/>

                <ScrollViewer 
                    HorizontalScrollBarVisibility="Auto" 
                    VerticalScrollBarVisibility="Auto">
                    <StackPanel Orientation="Horizontal" Margin="0 32 0 0">
                        <!-- Список файлов -->
                        <ListView Name="FileListListView" 
                            Background="#FF1C1C1C" 
                            Foreground="White" 
                            Grid.Row="1" 
                            HorizontalAlignment="Left"
                            BorderThickness="0">

                            <!-- Ресурсы стилей -->
                            <ListView.Resources>
                                <!-- Стиль заголовков колонок -->
                                <Style TargetType="{x:Type GridViewColumnHeader}">
                                    <Setter Property="Background" Value="#2A2A2A"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderBrush" Value="#404040"/>
                                    <Setter Property="Height" Value="30"/>
                                    <Setter Property="FontWeight" Value="Medium"/>
                                </Style>

                                <!-- Стиль элементов списка -->
                                <Style TargetType="{x:Type ListViewItem}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ListViewItem}">
                                                <Border 
                                                Name="Bd"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="0"
                                                Padding="5">
                                                    <GridViewRowPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <!-- При наведении -->
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Bd" Property="Background" Value="#333333"/>
                                                        <Setter Property="Foreground" Value="DarkRed"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </Trigger>

                                                    <!-- При выборе -->
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Bd" Property="Background" Value="DarkRed"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.Resources>

                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="OriginalFilename" 
                                    Width="200" 
                                    DisplayMemberBinding="{Binding OriginalFilename}"/>
                                    <GridViewColumn Header="ContentType" 
                                    Width="150" 
                                    DisplayMemberBinding="{Binding ContentType}"/>
                                    <GridViewColumn Header="FileSize" 
                                    Width="150" 
                                    DisplayMemberBinding="{Binding FileSize, StringFormat='{} {0} MB'}"/>
                                    <GridViewColumn Header="UploadDate" 
                                    Width="150" 
                                    DisplayMemberBinding="{Binding UploadDate, StringFormat='yyyy-MM-dd HH:mm:ss'}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>

                        <!-- Список авторизаций -->
                        <ListView Name="AuthListListView" 
                            Background="#FF1C1C1C" 
                            Foreground="White" 
                            Grid.Row="1" 
                            HorizontalAlignment="Left"
                            BorderThickness="0" Margin="20,0,0,0">

                            <!-- Контекстное меню -->
                            <ListView.ContextMenu>
                                <ContextMenu>
                                        <MenuItem Header="Удалить" Click="DeleteAuth"></MenuItem>
                                    </ContextMenu>
                            </ListView.ContextMenu>

                            <!-- Ресурсы стилей -->
                            <ListView.Resources>
                                <!-- Стиль заголовков колонок -->
                                <Style TargetType="{x:Type GridViewColumnHeader}">
                                    <Setter Property="Background" Value="#2A2A2A"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderBrush" Value="#404040"/>
                                    <Setter Property="Height" Value="30"/>
                                    <Setter Property="FontWeight" Value="Medium"/>
                                </Style>

                                <!-- Стиль элементов списка -->
                                <Style TargetType="{x:Type ListViewItem}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ListViewItem}">
                                                <Border 
                                                    Name="Bd"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="0"
                                                    Padding="5">
                                                    <GridViewRowPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <!-- При наведении -->
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Bd" Property="Background" Value="#333333"/>
                                                        <Setter Property="Foreground" Value="DarkRed"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </Trigger>

                                                    <!-- При выборе -->
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Bd" Property="Background" Value="DarkRed"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.Resources>

                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Authorization date" 
                                        Width="200" 
                                        DisplayMemberBinding="{Binding AuthDate, StringFormat='dd.mm.yyyy HH:mm:ss.fff'}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Подвал -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">
            <TextBlock Text="Общий размер хранилища: " 
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Foreground="White"/>
            <TextBlock x:Name="TextBoxAllFileSize"
                       Margin="0,0,40,0"
                       Foreground="White"/>
            <TextBlock Text="Последняя сессия: "
                Foreground="White"
                VerticalAlignment="Center"/>
            <TextBlock x:Name="TextBoxCurrentSession"
                FontWeight="SemiBold"
                Foreground="White"
                VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>