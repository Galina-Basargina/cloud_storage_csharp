<Page x:Class="coursework3.Pages.UsersListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:coursework3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="900"
      Title="MainWindow" Loaded="Page_Loaded" Background="#ee1A1A1A">

    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#ee1A1A1A"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="24"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border 
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="0"
                        CornerRadius="3">

                            <!-- Контент с анимацией -->
                            <ContentPresenter 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            RenderTransformOrigin="0.5,0.5">
                                <ContentPresenter.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
                                        <RotateTransform x:Name="rotateTransform" Angle="0"/>
                                    </TransformGroup>
                                </ContentPresenter.RenderTransform>
                            </ContentPresenter>
                        </Border>

                        <!-- Анимации -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">

                                <Setter Property="Background" Value="#ee1A1A1A"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Foreground" Value="#eed9d9d9"/>
                                <!-- Увеличение + поворот -->
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <!-- Увеличение на 5% -->
                                            <DoubleAnimation 
                                            Storyboard.TargetName="scaleTransform"
                                            Storyboard.TargetProperty="ScaleX"
                                            To="1.15" 
                                            Duration="0:0:0.2"/>
                                            <DoubleAnimation 
                                            Storyboard.TargetName="scaleTransform"
                                            Storyboard.TargetProperty="ScaleY"
                                            To="1.15" 
                                            Duration="0:0:0.2"/>

                                            <!-- Поворот на -15 градусов -->
                                            <DoubleAnimation 
                                            Storyboard.TargetName="rotateTransform"
                                            Storyboard.TargetProperty="Angle"
                                            To="-25" 
                                            Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>

                                <!-- Возврат в исходное состояние -->
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation 
                                            Storyboard.TargetName="scaleTransform"
                                            Storyboard.TargetProperty="ScaleX"
                                            To="1"
                                                Duration="0:0:0.2"/>
                                            <DoubleAnimation 
                                            Storyboard.TargetName="scaleTransform"
                                            Storyboard.TargetProperty="ScaleY"
                                            To="1"
                                                Duration="0:0:0.2"/>
                                            <DoubleAnimation 
                                            Storyboard.TargetName="rotateTransform"
                                            Storyboard.TargetProperty="Angle"
                                            To="0"
                                                Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type RadioButton}">
            <Setter Property="Foreground" Value="#FFEEEEEE"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="10 0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RadioButton}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Внешний круг -->
                            <Ellipse x:Name="outerEllipse"
                               Grid.Column="0"
                               Width="16"
                               Height="16"
                               Stroke="{TemplateBinding BorderBrush}"
                               StrokeThickness="1"
                               Fill="Transparent"
                               Margin="0,0,5,0"/>

                            <!-- Внутренний заполненный круг -->
                            <Ellipse x:Name="innerEllipse"
                               Grid.Column="0"
                               Width="8"
                               Height="8"
                               Fill="Transparent"
                               Margin="0,0,5,0"/>

                            <!-- Контент -->
                            <ContentPresenter Grid.Column="1"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"/>

                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- Наведение -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="outerEllipse" Property="Stroke" Value="#8B0000"/>
                            </Trigger>

                            <!-- Выбранное состояние -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="innerEllipse" Property="Fill" Value="#8B0000"/>
                                <Setter TargetName="outerEllipse" Property="Stroke" Value="#8B0000"/>
                            </Trigger>

                            <!-- Возврат к базовым цветам -->
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="outerEllipse" Property="Stroke" Value="#FFEEEEEE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <WrapPanel Orientation="Horizontal" Margin="10">
            <Button 
                Content="↺" 
                Margin="10,0,0,0" 
                Click="refreshUsers"/>
            <TextBlock 
                Text="Поиск" 
                Margin="20,0,0,0" 
                Foreground="#FFEEEEEE"
                VerticalAlignment="Center" 
                FontSize="16"/>
            <TextBox x:Name="TextBoxSearch" 
                     Width="150" Height="30" 
                     Margin="10,0,0,0" 
                     TextChanged="TextBoxSearch_TextChanged" 
                     BorderBrush="DarkRed" 
                     BorderThickness="1" 
                     FontSize="16"/>
            
            <StackPanel
                Orientation="Horizontal"
                VerticalAlignment="Center">
                <RadioButton x:Name="grid" 
               Content="⊞ Карточки" 
               GroupName="typeView" 
               Checked="typeView_Checked"/>

                <RadioButton x:Name="table" 
               Content="⊟ Таблица" 
               GroupName="typeView" 
               Checked="typeView_Checked"/>

                <RadioButton x:Name="list" 
               Content="▤ Список" 
               GroupName="typeView" 
               Checked="typeView_Checked"/>

            </StackPanel>

            <ComboBox Name="SortUserList" 
                      SelectionChanged="SortUserList_SelectionChanged"
                      Margin="20,0,0,0"
                      Width="194" Height="30" VerticalAlignment="Center">
                <ComboBoxItem Content="Сортировка по алфавиту (A-Z)"></ComboBoxItem>
                <ComboBoxItem Content="Сортировка по алфавиту (Z-A)"></ComboBoxItem>
                <ComboBoxItem Content="Сортировка по файлам (возр.)"></ComboBoxItem>
                <ComboBoxItem Content="Сортировка по файлам (убыв.)"></ComboBoxItem>
                <ComboBoxItem Content="Сортировка по памяти (возр.)"></ComboBoxItem>
                <ComboBoxItem Content="Сортировка по памяти (убыв.)"></ComboBoxItem>
            </ComboBox>
        </WrapPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="49*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            
            <!-- Вкладка со списком -->
            <ListView Name="UserListListView" 
                Visibility="Collapsed" 
                Grid.ColumnSpan="2"
                Background="#FF1C1C1C"
                Foreground="White"
                BorderThickness="0"
                MouseDoubleClick="UserSelected">

                <!-- Шаблон элементов -->
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Image x:Name="UserImage" Source="/Images/user_logo_white.png" 
                       Width="32" 
                       Height="32"
                       Margin="0,0,15,0"/>
                            <StackPanel>
                                <TextBlock Text="{Binding Login}" FontSize="14"/>
                                <TextBlock Text="{Binding FileCount, StringFormat='Файлов: {0}'}" 
                               FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>

                <!-- Полный контроль над стилями элементов -->
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <Border 
                                        Name="Bd"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        SnapsToDevicePixels="True">
                                        <ContentPresenter />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <!-- При наведении -->
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="DarkRed"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter TargetName="Bd" Property="Background" Value="Transparent"/>
                                        </Trigger>

                                        <!-- При выборе -->
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter TargetName="Bd" Property="Background" Value="DarkRed"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>

            
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Disabled">
                <WrapPanel Name="UserTablePanel" Orientation="Horizontal">
                    <!-- Вкладка с таблицей -->
                    <ListView Name="UserTableListView" 
                        Background="#FF1C1C1C" 
                        Foreground="White" 
                        Grid.ColumnSpan="2" 
                        Width="600" 
                        HorizontalAlignment="Left"
                        BorderThickness="0"
                        MouseDoubleClick="UserSelected" Margin="0,0,0,10">

                        <!-- Ресурсы стилей -->
                        <ListView.Resources>
                            <!-- Стиль заголовков колонок -->
                            <Style TargetType="{x:Type GridViewColumnHeader}">
                                <Setter Property="Background" Value="#2A2A2A"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="#404040"/>
                                <Setter Property="Height" Value="30"/>
                                <Setter Property="FontWeight" Value="Medium"/>
                            </Style>

                            <!-- Стиль элементов списка -->
                            <Style TargetType="{x:Type ListViewItem}">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ListViewItem}">
                                            <Border 
                                                Name="Bd"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="0"
                                                Padding="5">
                                                <GridViewRowPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <!-- При наведении -->
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#333333"/>
                                                    <Setter Property="Foreground" Value="DarkRed"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </Trigger>

                                                <!-- При выборе -->
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="DarkRed"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.Resources>

                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Логин" 
                                Width="200" 
                                DisplayMemberBinding="{Binding Login}"/>
                                <GridViewColumn Header="Количество файлов" 
                                Width="150" 
                                DisplayMemberBinding="{Binding FileCount}"/>
                                <GridViewColumn Header="Объем хранилища" 
                                Width="150" 
                                DisplayMemberBinding="{Binding AllFileSize, StringFormat='{} {0} MB'}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Общее количество файлов: " 
                                    Foreground="White" 
                                    HorizontalAlignment="Left" 
                                    VerticalAlignment="Top" 
                                    FontSize="16" 
                                    Margin="10,0,0,10"></TextBlock>
                        <TextBlock x:Name="countAllFile" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Top" 
                            Foreground="White" 
                            FontSize="16" Margin="0,0,0,10"/>
                    </StackPanel>
                </WrapPanel>
            </ScrollViewer>

            
            <!-- Вкладка со карточками -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                HorizontalScrollBarVisibility="Disabled"
                Grid.ColumnSpan="2"
                Visibility="Collapsed"
                Name="UserCardScrollViewer">
                <ItemsControl Name="UserCardsItemsControl"  Grid.ColumnSpan="2">
                    <ItemsControl.Resources>
                        <!-- Общий стиль для текста -->
                        <Style TargetType="TextBlock" x:Key="CardTextStyle">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <!-- Триггер для наведения -->
                                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Border}}" 
                                    Value="True">
                                    <Setter Property="Foreground" Value="DarkRed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ItemsControl.Resources>

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#171717" 
                                BorderThickness="2" 
                                Margin="5" 
                                Padding="10" 
                                Width="150" 
                                Height="150" 
                                Background="#ee242424"
                                Cursor="Hand"
                                MouseLeftButtonDown="UserSelected">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#ee242424"/>
                                        <Style.Triggers>
                                            <!-- Изменение фона при наведении -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#333333"/>
                                                <Setter Property="BorderBrush" Value="darkRed"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <!-- Логика изменения цвета при нажатии -->
                                <Border.Triggers>
                                    <EventTrigger RoutedEvent="PreviewMouseDown">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                To="DarkRed"
                                                Duration="0:0:0.1"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="PreviewMouseUp">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                To="White"
                                                Duration="0:0:0.1"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Border.Triggers>

                                <StackPanel Orientation="Vertical" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center">
                                    <Image Source="/Images/user_logo_white.png" 
                                    Width="64" 
                                    Height="64" 
                                    Margin="0,0,0,10"/>
                                    <TextBlock Text="{Binding Login}" 
                                        FontWeight="Bold" 
                                        Style="{StaticResource CardTextStyle}"/>
                                    <TextBlock Text="{Binding FileCount, StringFormat='Файлов: {0}'}" 
                                        Style="{StaticResource CardTextStyle}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            
            
        </Grid>


        
    </Grid>
</Page>